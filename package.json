{
  "name": "GoofCord",
  "version": "1.0.0",
  "description": "Take control of your Discord experience with GoofCord â€“ the highly configurable and privacy-first discord client.",
  "main": "ts-out/main.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.html src/**/**/*.css src/**/**/*.js ts-out/ && copyfiles package.json ts-out/ && copyfiles assets/**/** ts-out/",
    "start": "npm run build && electron-forge start",
    "makeLinux": "npm run build && electron-builder make --platform=linux --arch=universal",
    "makeWindows64": "npm run build && electron-forge make --platform=win32 --arch=x64",
    "makeWindows32": "npm run build && electron-forge make --platform=win32 --arch=ia32",
    "makeWindows": "npm run build && npm run packageWindows64 && npm run packageWindows32",
    "package": "electron-forge package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Milkshiift/GoofCord"
